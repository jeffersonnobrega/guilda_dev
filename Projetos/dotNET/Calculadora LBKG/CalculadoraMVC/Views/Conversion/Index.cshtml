@{
    ViewData["Title"] = "Conversor LB ↔ KG";
}

<h1>Conversor LB ↔ KG</h1>

<form method="post">
    <label for="value">Valor:</label>
    <input type="number" step="0.01" name="value" id="value" required>
    <select name="conversion" id="conversion">
        <option value="lbToKg">LB para KG</option>
        <option value="kgToLb">KG para LB</option>
    </select>
    <button type="submit">Converter</button>
</form>

@if (ViewBag.Result != null)
{
    <p>Resultado: <strong>@ViewBag.Result</strong></p>
}
